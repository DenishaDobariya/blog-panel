<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Blogs</title>
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="css/styles.css"> 
</head>
<body>

    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="/blogs">BlogSite</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <% if (user) { %>
                            <li class="nav-item">
                                <span class="nav-link">Welcome, <%= user.name %></span>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Profile <i class="bi bi-person-circle"></i>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="profileDropdown">
                                    <li><a class="dropdown-item" href="/changePassword">Change Password</a></li>
                                    <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/my-blogs">My Blogs</a>
                            </li>
                        <% } else { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/login">Login</a>
                            </li>
                        <% } %>
                        <li class="nav-item">
                            <a class="nav-link" href="/add">Add Blog</a>
                        </li>
                        <li>
                            <a class="nav-link" href="/topics">Add Topic</a>
                        </li>
                        <li>
                            <a class="nav-link" href="/subtopics">Add SubTopic</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->

    <% if(logIn){ %>
        <div class="alert alert-success" role="alert" id="alertBox">
           <%= logIn %>
           <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>


    <div class="container mt-5">
        <h1 class="text-center mb-4">All Blogs</h1>
        <div class="row">
            <% if (blogs.length > 0) { %>
                <% blogs.forEach(blog => { %>
                    <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <% if (blog.image) { %>
                                <img src="<%= blog.image %>" class="card-img-top" alt="<%= blog.title %>">
                            <% } %>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title"><%= blog.title %></h5>
                                <p class="card-text"><%= blog.content.substring(0, 100) %>...</p>
                                <p class="text-muted">Written by <%= blog.author.name %> on <%= blog.createdAt.toLocaleDateString() %></p>

                                <!-- Comment Form -->
                                <form action="/blogs/<%= blog._id %>/add-comment" method="POST">
                                    <input type="hidden" name="blogId" value="<%= blog._id %>">
                                    <div class="mb-3">
                                        <textarea name="comment" class="form-control" placeholder="Add a comment..." required></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Add Comment</button>
                                </form>

                                <div class="mt-4">
                                    <% if (blog.comments && blog.comments.length > 0) { %>
                                        <h6>Comments:</h6>
                                        <% blog.comments.forEach(comment => { %>
                                            <div class="card comment-card mb-2">
                                                <div class="card-body">
                                                    <p class="card-text m-0"><strong><%= comment.user.name %></strong> commented:</p>
                                                    <p class="card-text m-0"><%= comment.text %></p>
                                                    <p class="text-muted m-0"><%= comment.createdAt.toLocaleDateString() %></p>
                                                </div>
                                            </div>
                                        <% }) %>
                                    <% } else { %>
                                        <p class="text-muted">No comments yet.</p>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12">
                    <div class="alert alert-info">No blogs found. Start by adding a new blog!</div>
                </div>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        setTimeout(() => {
            let alert = document.getElementById('alertBox');
            alert.style.display = "none";
        }, 2500);
    </script>
</body>
</html>
